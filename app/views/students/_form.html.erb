<%= form_with(model: student) do |form| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
        <% student.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :student_id, 'NIS' %>
    <%= form.number_field :student_id %>
  </div>

  <div class="form-group">
    <%= form.label :name, 'Nama' %>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :Gender, "Jenis Kelamin" %>
    <%= form.radio_button :gender, 'Laki-laki' %>
    <%= form.label :gender, "Laki-Laki", :value => "Laki-laki"  %>
    <%= form.radio_button :gender, 'Perempuan' %>
    <%= form.label :gender, "Perempuan", :value => "Perempuan" %>
  </div>

  <div class="form-group">
    <%= form.label :place_of_birth, "Tempat Lahir" %>
    <%= form.text_field :place_of_birth %>
  </div>

  <div class="form-group">
    <%= form.label :date_of_birth, 'Tanggal Lahir' %>
    <%= form.date_select :date_of_birth %>
  </div>

  <div class="form-group">
    <%= form.label :address, 'Alamat' %>
    <%= form.text_field :address %>
  </div>

  <div class="form-group">
    <%= form.label :school_origin, 'Asal Sekolah' %>
    <%= form.text_field :school_origin %>
  </div>

  <div class="form-group">
    <%= form.label :grade, 'Kelas' %>
    <%= form.select :grade, ['X', 'XI', 'XII'], :prompt => 'Pilih Kelas' %>
  </div>

  <div class="form-group">
    <%= form.label :major, 'Jurusan' %>
    <%= form.select :major, ['OTKP', 'RPL', 'TKJ', 'BDP', 'TBG', 'HTL'], :prompt => 'Pilih Jurusan' %>
  </div>

  <div class="actions" align="center">
    <%= form.submit %>
  </div>
<% end %>
